  $(".my_form").on("submit", function(event){
    $.ajax({
      type: "POST",
      url: this.action,
      data: $(this).serialize(),
      success: function(response) {

        $('body').removeClass('modal-open');
        $('.modal-backdrop').remove();
        $("#main_div").html(response);
      }
    });
    event.preventDefault();
  });


</script>
